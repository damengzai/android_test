<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:id="@+id/atom_hotel_white_share_bgg"
            android:layout_width="300dp"
            android:layout_height="490dp"
            android:orientation="vertical">

            <!--<com.facebook.drawee.view.SimpleDraweeView-->
                <!--android:id="@+id/atom_hotel_share_img_bg"-->
                <!--android:layout_width="270dp"-->
                <!--android:layout_height="240dp"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:layout_marginLeft="15dp"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:layout_marginTop="34dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:src="@drawable/atom_hotel_share_img" />-->

            <TextView
                android:id="@+id/atom_hotel_share_txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="15dp"
                android:text="捷克"
                android:textColor="#333333"
                android:textSize="24dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/atom_hotel_share_txt_name_content1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#999999"
                            android:lineSpacingExtra="4dp"
                            android:textSize="12dp" />

                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/atom_hotel_share_txt_change_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="157dp"
                    android:layout_centerVertical="true"
                    android:gravity="center">

                    <Button
                        android:id="@+id/atom_hotel_share_txt_change"
                        android:layout_width="12dp"
                        android:layout_height="32dp"
                        android:background="@null" />
                </LinearLayout>
                <!--<com.facebook.drawee.view.SimpleDraweeView-->
                    <!--android:id="@+id/atom_hotel_share_qr_code"-->
                    <!--android:layout_width="55dp"-->
                    <!--android:layout_height="55dp"-->
                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_centerVertical="true"-->
                    <!--android:layout_marginLeft="47dp"-->
                    <!--android:scaleType="centerCrop"-->
                    <!--android:src="@drawable/atom_hotel_share_img" />-->
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="33dp"
                android:gravity="center">

                <Button
                    android:id="@+id/atom_hotel_internet_share_btn_bg"
                    android:layout_width="140dp"
                    android:layout_height="36dp"
                    android:text="秀心动城市"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="17dp"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/atom_hotel_share_content_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="vertical"
        android:visibility="gone">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:text="分享给好友"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:paddingBottom="21dp"
            android:paddingLeft="38dp"
            android:paddingRight="38dp"
            android:paddingTop="21dp"
            >

            <LinearLayout
                android:id="@+id/atom_share_weinxin_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="微信好友"
                    android:textColor="#666666"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/atom_share_weinxin_friend_circles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="朋友圈"
                    android:textColor="#666666"
                    android:textSize="12dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/atom_share_sina_weibo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新浪微博"
                    android:textColor="#666666"
                    android:textSize="12dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>