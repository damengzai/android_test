<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
<RelativeLayout
    android:layout_width="160dp"
    android:layout_height="152dp">

    <ImageView
        android:id="@+id/atom_hotel_destination_play_item_cover"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/atom_hotel_destination_play_item_rank"
        android:layout_width="44dp"
        android:layout_height="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />
    <!--描述-->
    <TextView
        android:id="@+id/atom_hotel_destination_play_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/atom_hotel_destination_play_item_cover"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="东方宫殿建筑代表，世界宫殿建筑典范"
        android:textColor="#F000FF"
        android:textSize="10dp" />

    <!--名称-->
    <TextView
        android:id="@+id/atom_hotel_destination_play_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/atom_hotel_destination_play_item_cover"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="故宫博物院"
        android:textColor="#212121"
        android:textSize="14dp"
        android:textStyle="bold" />
    <!--价格-->
    <TextView
        android:id="@+id/atom_hotel_destination_play_item_price"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="￥60"
        android:textColor="#FF714A"
        android:textSize="12dp" />
    <!--划线价格-->
    <TextView
        android:id="@+id/atom_hotel_destination_play_item_dep_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@id/atom_hotel_destination_play_item_price"
        android:text="￥70"
        android:textColor="#9E9E9E"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="14dp"
        android:layout_marginRight="8dp"
        android:text="10元代金券"
        android:textColor="#FF714A"
        android:textSize="9dp" />
</RelativeLayout>
</LinearLayout>